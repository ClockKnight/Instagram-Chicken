<!-- Navbar fixed to top of screen -->
<nav class="navbar navbar-default navbar-inverse navbar-fixed-top" role="navigation">
  <div class="container">

  <!-- Logo and toggle get grouped for better mobile display -->
  <div class="navbar-header">
    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <a class="navbar-brand" href="#">Top.dat</a>
  </div>

  <!-- Collapsing login at smaller screen sizes -->
  <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

    <!-- Navbar search form -->
    <form class="navbar-form navbar-left" role="search">
      <div class="form-group">
        <input type="text" class="form-control" placeholder="Look for a tag...">
      </div>
      <button type="submit" class="btn btn-default">Search</button>
    </form>
    <!-- Instagram login popup -->
    <ul class="nav navbar-nav navbar-right">
      <li class="dropdown">
        <% if session[:access_token] == nil %>
          <a href="oauth/connect"><b>Connect with Instagram</b></a>
        <% else %>
          <a href="oauth/disconnect"><b>Log Out</b></a>
        <% end %>
      </li>
    </ul>

  </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<div class="container">

<% if session[:access_token] != nil %>
  <div class="row photo-row-sm">
    <% for media_item in @client.user_recent_media %>
    <div class="col-md-3"><%= image_tag(media_item) %></div>
    <% end %>
  </div>
<% else %>
  <h3>Sign in please.</h3>
<% end %>

</div>
